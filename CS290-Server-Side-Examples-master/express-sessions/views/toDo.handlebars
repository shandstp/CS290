<h1>Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<form method="post">
  Thing to do: <input type="text" name="name" id="toDoName">
  Place to do it: <input type="text" name="city" id="toDoCity">
  Requisite Temperature: <input type="text" name="temp" id="toDoTemp">
  <input type="submit" name="add item" value="add item">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>{{this.name}},{{this.city}},{{this.temp}}</h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
